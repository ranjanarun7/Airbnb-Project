<% layout('layouts/boilerplate') %>

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
      <%= listing.title %>
    </title>
    <style>
      h1 {
        text-align: center;
        margin-top: 20px;
      }

      .listing-container {
        margin-top: 20px;
        max-width: 800px;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      .listing-image {
        max-width: 100%;
        width: 100%;
        height: 90vh;
        border-radius: 8px;
      }

      .listing-details {
        margin-top: 20px;
      }

      .listing-details h2 {
        margin-bottom: 10px;
      }

      .listing-details p {
        margin: 5px 0;
      }

      .back-link {
        display: inline-block;
        margin-top: 15px;
        padding: 10px 15px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 4px;
      }

      .back-link:hover {
        background-color: #0056b3;
        color: #f9f9f9;
      }

      .card-header {
        display: flex;
        align-items: center;
        background-color: transparent;
        margin-top: 3px;
      }

      .edit-form {
        display: inline;
        margin-left: 10rem;
      }

      .delete-form {
        display: inline;
      }

      .edit-form button {
        background: none;
        border: none;
        cursor: pointer;
        color: #007bff;
        font-size: 16px;
      }

      .edit-form button:hover,
      .delete-form button:hover {
        text-decoration: underline;
      }

      .delete-form button {
        color: red;
        background: none;
        border: none;
        padding: 5px 10px;
        border-radius: 3px;
        cursor: pointer;
      }

      .reviews-section,
      .existing-reviews {
        margin-top: 30px;
      }

      .card {
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        border-radius: 5px;
      }

      .review-card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .owner {
        font-size: larger;
        color: gray;
        margin-left: 5px;
      }

      .author-info {
        display: flex;
        justify-content: space-between;
        color: gray;
        font-size: medium;
      }
      .card-text {
        margin-top: 10px;
        font-size: 24px;
        gap: 10px;
      }
    </style>
  </head>

  <body>
    <div class="listing-container">
      <h1>Listing Details:-</h1>
      <div class="card-header">
        <h2>Title: <%= listing.title %>
        </h2>
        <% if (listing.owner.equals(currentUser?._id)) { %>
          <form action="/listings/<%= listing._id %>/edit" method="GET" class="edit-form">
            <button> <i class="fa-solid fa-pen"></i></button>
          </form>
          <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="delete-form"
            onsubmit="return confirm('Are you sure you want to delete this listing?');">
            <button type="submit">
              <i class="fa-solid fa-trash"></i> Delete
            </button>
          </form>
          <% } %>
      </div>
      <img src="<%= listing.image.url %>" alt="<%= listing.title %>" class="listing-image">
      <div class="listing-details">
        <h2>Owner: <i class="owner">
            <%= users.find(user=> user._id.equals(listing.owner)).username %>
          </i></h2>
        <h2>Description: </h2>
        <p>
          <%= listing.description %>
        </p>
        <h2>Price: </h2>
        <p>â‚¹<%= listing.price.toLocaleString('en-IN') %>/night</p>
        <h2>Location: </h2>
        <p>
          <%= listing.location %>
        </p>
        <h2>Country: </h2>
        <p>
          <%= listing.country %>
        </p>
      </div>
      <hr>
      <% if (!currentUser) { %>
        <p>Please <a href="/login">log in</a> to leave a review.</p>
        <% } else { %>
          <div class="reviews-section mt-3 mb-3">
            <h2>Leave a Review:</h2>
            <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate>
              <div class="mb-3">
                <label class="form-label" for="reviewerName">Your Name:</label>
                <input type="text" id="reviewerName" name="reviewerName" class="form-control" required>
                <div class="invalid-feedback">
                  Please provide your name.
                </div>
              </div>
              <!-- <div class="mb-3">
                <label class="form-label" for="rating">Rating (1-5):</label>
                <input type="range" class="form-range" id="rating" name="rating" min="1" max="5" required>
              </div>  -->

              <div class="mb-3">
                <label class="form-label" for="rating">Rating (1-5):</label>
              <fieldset class="starability-slot">
  <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="rating" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="rating" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="rating" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="rating" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="rating" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
</div>

              <div class="mb-3">
                <label class="form-label" for="comment">Comment:</label>
                <textarea id="comment" name="comment" class="form-control" required></textarea>
                <div class="invalid-feedback">
                  Please add some comment for review.
                </div>
              </div>
              <button type="submit" class="btn btn-outline-success">Submit Review</button>
            </form>
          </div>
          <% } %>
            <hr>
            <div class="existing-reviews mt-3 mb-3">
              <h2> All Reviews:</h2>
              <div class="row">
                <% if (listing.reviews.length===0) { %>
                  <p>No reviews yet. Be the first to review!</p>
                  <% } else { %>
                    <% listing.reviews.forEach(review=> { %>
                      <div class="card mb-3 col-5 ms-3">
                        <div class="card-body">
                          <div class="review-card-header">
                            <h5 class="card-title">
                              <%= review.reviewerName %>
                            </h5>
                            <% if (review.author && review.author.equals(currentUser?._id)) { %>
                              <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                method="POST" class="delete-form"
                                onsubmit="return confirm('Are you sure you want to delete this review?');">
                                <button type="submit">
                                  <i class="fa-solid fa-trash"></i> Delete
                                </button>
                              </form>
                              <% } %>
                          </div>
                          <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                          <p class="card-text">
                            Comment:
                            <%= review.comment %>
                          </p>
                          <p class="author-info">@<%= users.find(user => user._id.equals(review.author)).username %><small> Date: <%= review.createdAt.toLocaleDateString() %></small></p>
                        </div>
                      </div>
                      <% }); %>
                        <% } %>
              </div>
            </div>
            <a href="/listings" class="back-link">Back to Listings</a>
    </div>
  </body>