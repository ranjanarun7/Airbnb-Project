<% layout('layouts/boilerplate') %>

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WanderLust</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
      }

      h1 {
        text-align: center;
        margin: 10px 0;
      }

      /*.create-listing-btn {
      display: block;
      margin: 10px auto;
      padding: 10px 20px;
      background-color: #28a745;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
    }*/
      .listings-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 20px;
      }

      .card {
        display: flex;
        flex-direction: column;
        width: 380px;
        background: #fff;
        border: 1px solid #ddd;
        cursor: pointer;
        border-radius: 5px;
        margin: 10px 5px;
        padding: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      .card:hover {
        opacity: 0.8;
      }

      .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .card-header h2 {
        margin: 0;
        font-weight: bold;
        font-size: 15px;
      }

      .edit-form,
      .delete-form {
        display: inline;
        margin-left: 5px;
      }

      .edit-form button {
        background: none;
        border: none;
        cursor: pointer;
        color: #007bff;
        font-size: 16px;
      }

      .edit-form button:hover,
      .delete-form button:hover {
        text-decoration: underline;
      }

      .delete-form button {
        color: red;
        background: none;
        border: none;
        padding: 5px 10px;
        border-radius: 3px;
        cursor: pointer;
      }

      p {
        margin: 5px 0;
      }

      .image-container {
        text-align: center;
        margin: 5px 0;
      }

      .image-container img {
        border-radius: 5px;
        width: 100%;
        height: 200px;
        object-fit: cover;
      }

      .filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
      }

      .filter {
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        cursor: pointer;
        opacity: 0.7;
      }

      .filter:hover {
        opacity: 1;
      }

      .filter a {
        text-decoration: none;
        color: #333;
        font-size: 0.8rem;
      }

      .tax-info {
        display: none;
      }

      .tax-toggle {
        text-align: center;
        margin-top: 2rem;
        margin-left: 5rem;
        cursor: pointer;
        border-radius: 1rem;
        border: 1px solid black;
        padding: 0.6rem 1rem;
        height: 3rem;
      }
      .form-switch {
        display: inline;
        text-align: center;
      }
    </style>
  </head>

  <body>
    <!--<h1>All Listings</h1>
  <form action="/listings/new" method="GET">
    <button class="create-listing-btn">Create New Listing</button>
  </form>-->
    <div class="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <a href="/listings?sort=recent">Trending</a>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <a href="/listings?sort=rooms">Rooms</a>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <a href="/listings?sort=rooms">Iconic Cities</a>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tree-city"></i></div>
        <a href="/listings?sort=nature">Nature</a>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <a href="/listings?sort=beaches">Beaches</a>
      </div>
      <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <a href="/listings?sort=rooms">Castles</a>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <a href="/listings?sort=rooms">Amazing Pools</a>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain"></i></div>
        <a href="/listings?sort=mountain">Mountain</a>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tree"></i></div>
        <a href="/listings?sort=forest">Forest</a>
      </div>
      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>
      </div>
    </div>
    <div class="listings-container mt-3">
      <% allListings.forEach(listing=> { %>
        <a href="/listings/<%= listing._id %>" style="text-decoration: none; color: inherit;">
          <div class="card">
            <div class="card-header">
              <h2>
                <%= listing.title %>
              </h2>
              <% if (listing.owner.equals(currentUser?._id)) { %>
                <form action="/listings/<%= listing._id %>/edit" method="GET" class="edit-form">
                  <button> <i class="fa-solid fa-pen"></i></button>
                </form>
                <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="delete-form"
                  onsubmit="return confirm('Are you sure you want to delete this listing?');">
                  <button type="submit">
                    <i class="fa-solid fa-trash"></i> Delete
                  </button>
                </form>
                <% } %>
            </div>
            <p>
              <%= listing.description %>
            </p>
            <div class="image-container"><img src="<%= listing.image.url %>" alt="<%= listing.title %>" /></div>
            <p>Price: &#8377;<%= listing.price.toLocaleString('en-IN') %><i class="tax-info">&nbsp; &nbsp; +18% GST</i>
            </p>
            <p>Location: <%= listing.location %>, <%= listing.country %>
            </p>
            <p>Posted by: <%= users.find(user=> user._id.equals(listing.owner)).username %></p>
          </div>
        </a>
        <% }) %>
    </div>
    <script>
      const taxToggle = document.getElementById('flexSwitchCheckDefault');
      taxToggle.addEventListener('change', () => {
        const taxInfoElements = document.querySelectorAll('.tax-info');
        taxInfoElements.forEach(element => {
          if (taxToggle.checked) {
            element.style.display = 'inline';
          } else {
            element.style.display = 'none';
          }
        });
      });
    </script>
  </body>